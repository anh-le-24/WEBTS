@{
    ViewBag.Title = "Thêm Sản Phẩm";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="main-content">
    <div class="form-container">
        <h2 class="form-title">Thêm Sản Phẩm Mới</h2>

        <form method="post" enctype="multipart/form-data" class="product-form">
            <div class="form-group">
                <label for="TenSP">Tên Sản Phẩm</label>
                <input type="text" id="TenSP" name="TenSP" class="form-control" required placeholder=" trà sữa truyền thống" />
            </div>

            <div class="form-group">
                <label for="Gia">Giá</label>
                <input type="text" id="Gia" name="Gia" class="form-control" required />
            </div>

            <div class="form-group">
                <label for="MoTa">Mô Tả</label>
                <textarea id="MoTa" name="MoTa" class="form-control" rows="4"></textarea>
            </div>

            <div class="form-group">
                <label for="MaLoai">Loại Sản Phẩm</label>
                <select id="MaLoai" name="MaLoai" class="form-control">
                    <option value="">-- Chọn loại sản phẩm --</option>
                    <option value="1">Trà</option>
                    <option value="2">Café</option>
                    <option value="3">Nước ép</option>
                </select>
            </div>

            <div class="center">
                <div class="form-group form">
                    <span class="form-title">Hình Ảnh</span>

                    <label for="file-input" class="drop-container">
                        <span class="drop-title">Drop files here</span>
                        or
                        <input type="file" id="HinhAnh" name="HinhAnh" accept="image/*" required="" id="file-input">

                    </label>
                    <div id="image-preview" class="image-preview"></div>
                </div>
            </div>


                
                <div class="form-actions center">
                    <button type="submit" class="btn btn-primary">Thêm Sản Phẩm</button>
                    <a href="/SanPham" class="btn btn-secondary">Quay lại</a>

                </div>
</form>
    </div>
</div>





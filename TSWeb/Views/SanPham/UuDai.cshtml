
@{
    ViewBag.Title = "UuDai";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2></h2>

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trang Ưu Đãi</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="container">
        <h1>Ưu Đãi Đặc Biệt</h1>

        <div class="offer-section">
            <div class="offer">
                <h2 class="offer-title">Ưu đãi Tết Nguyên Đán</h2>
                <p class="offer-description">
                    Nhận ngay ưu đãi 20% khi mua sắm trong dịp Tết Nguyên Đán.
                </p>
                <p class="offer-percentage">Giảm giá: 20%</p>
                <p class="offer-condition">
                    Điều kiện: Đơn hàng từ 500,000 VND trở lên.
                </p>
                <p class="offer-voucher">Mã giảm giá: <strong>TET2024</strong></p>
            </div>

            <div class="offer">
                <h2 class="offer-title">Ưu đãi Black Friday</h2>
                <p class="offer-description">
                    Ưu đãi khủng lên đến 50% cho tất cả sản phẩm.
                </p>
                <p class="offer-percentage">Giảm giá: 50%</p>
                <p class="offer-condition">
                    Điều kiện: Áp dụng từ 25/11 đến 28/11.
                </p>
                <p class="offer-voucher">Mã giảm giá: <strong>BLACKFRIDAY</strong></p>  
            </div>

            <div class="offer">
                <h2 class="offer-title">Ưu đãi Sinh Nhật</h2>
                <p class="offer-description">
                    Mừng sinh nhật của bạn với ưu đãi 15% cho mọi đơn hàng.
                </p>
                <p class="offer-percentage">Giảm giá: 15%</p>
                <p class="offer-condition">
                    Điều kiện: Dành riêng cho khách hàng có ngày sinh nhật trong tháng.
                </p>
                <p class="offer-voucher">Mã giảm giá: <strong>BIRTHDAY15</strong></p> <!-- Mã giảm giá -->
            </div>
        </div>
    </div>
</body>
</html>


@{
    ViewBag.Title = "Thanh toán thành công";
    Layout = "~/Views/Shared/nav.cshtml";
}

<!-- Centered Layout Container with the card moved higher -->
<div class="d-flex justify-content-center align-items-start" style="min-height: 90vh; background-color: #f4f9fd; padding: 20px;">

    <!-- Card to display the content -->
    <div class="card shadow-lg rounded-lg" style="max-width: 600px; width: 100%; background-color: #ffffff; padding: 30px 30px; border-radius: 12px; box-shadow: 0px 15px 40px rgba(0, 0, 0, 0.1);">

        <!-- Success Message Section -->
        <div class="text-center">
            <h3 class="text-primary font-weight-bold" style="font-size: 2.5rem; font-family: 'Arial', sans-serif; color: #0062cc;">Đặt hàng thành công!</h3>
            <p class="lead" style="font-size: 1.1rem; color: #495057; line-height: 1.6; font-family: 'Arial', sans-serif; margin-top: 20px;">
                Cảm ơn bạn đã đặt hàng tại chúng tôi. Đơn hàng của bạn đã được xử lý và sẽ được giao trong thời gian sớm nhất. Chúng tôi rất mong bạn hài lòng với sản phẩm của mình!
            </p>
        </div>

        <!-- Buttons for Menu and Homepage -->
        <div class="d-flex justify-content-between mt-4">
            <!-- Quay lại Menu Button -->
            <a href="@Url.Action("ListSanPham", "Home")" class="btn btn-custom btn-lg shadow-sm" style="border-radius: 50px; padding: 15px 30px; font-size: 18px; width: 48%; text-align: center; margin-right: 4%;">
                Quay lại Menu
            </a>

            <!-- Quay lại Trang Chủ Button -->
            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary btn-lg shadow-sm" style="border-radius: 50px; padding: 15px 30px; font-size: 18px; width: 48%; text-align: center;">
                Quay lại Trang Chủ
            </a>
        </div>
    </div>
</div>



<!-- Custom Styles for Hover Effects and Smooth Transitions -->
<style>


@{
    ViewBag.Title = "ChinhSuaCN";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="center">
    <div class="edit-customer-container">
        <div class="page-header">
            <div class="header-content">
                <h2>Chỉnh sửa thông tin chi nhánh</h2>
            </div>
        </div>

        <div class="customer-form-container">
            <form action="@Url.Action("ChinhSuaChiNhanh", "Admin")" method="post">
                <!-- Ẩn input IDCN để lưu giá trị chi nhánh -->
                <input type="hidden" name="IDCN" value="@ViewBag.list[0][0]" /> <!-- Chèn giá trị ID từ model hoặc dữ liệu truyền vào -->

                <div class="form-sections">
                    <!-- Phần thông tin cơ bản -->
                    <div class="form-section">
                        <div class="section-header">
                            <i class="fas fa-user-circle"></i>
                            <h3>Thông tin chi nhánh</h3>
                        </div>
                        <input type="hidden" name="IDND" value="@(ViewBag.list != null && ViewBag.list.Count > 0 ? ViewBag.list[0][0] : "")" />
                        <div class="form-group">
                            <label for="Name">Tên Chi Nhánh</label>
                            <input type="text" id="Name" name="Name" class="form-control" required placeholder="Chi Nhánh Cao Thắng" value="@(ViewBag.list != null && ViewBag.list.Count > 0 ? ViewBag.list[0][1] : "")" />

                        </div>

                        <div class="form-group">
                            <label for="Address">Địa Chỉ</label>
                            <input type="text" id="Address" name="Address" class="form-control" required placeholder="123 đường Cao Thắng, Quận 3, HCM" value="@(ViewBag.list != null && ViewBag.list.Count > 0 ? ViewBag.list[0][2] : "")" />

                        </div>

                        <div class="form-group">
                            <label for="DateCreate">Ngày Tạo</label>
                            <!-- Để trống nếu không muốn thay đổi mật khẩu -->
                            <input type="date" id="DateCreate" name="DateCreate" value="@(ViewBag.list != null && ViewBag.list.Count > 0 ? ViewBag.list[0][3] : "")" class="form-control" />
                        </div>

                        <!-- Nút thao tác -->
                        <div class="form-actions center">
                            <!-- Nút hủy -->
                            <button type="button" class="btn btn-secondary" onclick="history.back()">
                                <i class="fas fa-times"></i> Hủy
                            </button>

                            <!-- Nút cập nhật -->
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Cập nhật
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

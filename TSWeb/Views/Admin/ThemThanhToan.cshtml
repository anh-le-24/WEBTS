@{
    ViewBag.Title = "Thêm Thanh Toán";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Thêm Thanh Toán</h2>

@using (Html.BeginForm("ThemThanhToan", "Admin", FormMethod.Post))
{
    <div class="form-group">
        <label>Ngày Thanh Toán:</label>
        <input type="date" name="NgayThanhToan" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Tổng Tiền:</label>
        <input type="number" name="TongTien" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Hình Thức Thanh Toán:</label>
        <input type="text" name="HinhThucThanhToan" class="form-control" required />
    </div>
    <div class="form-group">
        <label>ID Đơn Hàng:</label>
        <input type="number" name="IDDH" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-success">Thêm Thanh Toán</button>
}

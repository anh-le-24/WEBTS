@{
    ViewBag.Title = "HomeNV";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/Css/HomeNVStyleSheet.css" rel="stylesheet" />
</head>

<body>

    <button class="btn-them-dh">
        Thêm đơn hàng
    </button>

  @foreach (var a in ViewBag.list)
        {
            <section class="dashboard">
                <div class="card">
                    <span>Đơn hàng số: @a[0]</span><br />
                    <span>Ngày thanh toán: @a[1]</span><br />
                    <span>Trạng thái: @a[2]</span><br />
                    <span>Tổng tiền: @a[3]</span><br />
                    <span>Chi tiết: @a[4]</span><br />
                </div>
            </section>
        }

</body>
</html>

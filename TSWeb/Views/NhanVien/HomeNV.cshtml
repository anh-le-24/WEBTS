@{
    ViewBag.Title = "HomeNV";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/Css/HomeNVStyleSheet.css" rel="stylesheet" />
</head>

<body>
    <!-- Header -->
    <header>
        <div class="logo">
            <img src="~/images/bs1.png" alt="Logo VinaAI">
            <span>DEMO PHẦN MỀM PHÒNG KHÁM VINAAI</span>
        </div>
        <div class="user-info">
            <span>@DateTime.Now.ToString("HH:mm:ss | dddd, 'ngày' dd 'tháng' MM 'năm' yyyy")</span>
            <img src="~/images/avatar.png" alt="Avatar" />
        </div>
    </header>

    <!-- Sidebar -->
    <aside class="sidebar">
        <ul>
            <li>@Html.ActionLink("Dashboard", "Index", "Home")</li>
            <li>@Html.ActionLink("Tiếp nhận bệnh", "TiepNhanBenh", "BenhNhan")</li>
            <li>@Html.ActionLink("Lịch hẹn", "LichHen", "BenhNhan")</li>
            <li>@Html.ActionLink("Danh mục", "DanhMuc", "BenhNhan")</li>
        </ul>
    </aside>

    <!-- Main Content -->
    <main>
        <button class="btn-them-dh">
            Thêm đơn hàng
        </button>
        @foreach (var a in ViewBag.list)
        {
            <section class="dashboard">
                <div class="card">
                    <span>Đơn hàng số: @a[0]</span>
                    <span>Ngày thanh toán : @a[1]</span>
                    <span>Trạng thái: @a[2]</span>
                    <span>Tổng tiền :@a[3]</span>
                    <span>@a[4]</span>
                </div>
            </section>
        }

    </main>

</body>
</html>

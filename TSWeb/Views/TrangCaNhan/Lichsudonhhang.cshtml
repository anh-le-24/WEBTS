        }

        .bg-white {
            background-color: #ffffff;
        }

        .p-4 {
            padding: 1rem;
        }

        .mb-4 {
            margin-bottom: 1rem;
        }

        .border-b {
            border-bottom: 1px solid #e5e7eb;
        }

        .border-r {
            border-right: 1px solid #e5e7eb;
        }

        .rounded {
            border-radius: 0.25rem;
        }

        .text-gray-800 {
            color: #1f2937;
        }

        .text-gray-600 {

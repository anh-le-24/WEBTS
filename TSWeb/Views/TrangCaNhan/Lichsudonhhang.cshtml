        }

        .text-red-500 {
            color: #ef4444;
        }

        .text-orange-500 {
            color: #f97316;
        }

        .text-white {
            color: #ffffff;
        }

        .text-xs {
            font-size: 0.75rem;
        }

        .font-semibold {
            font-weight: 600;
        }

        .line-through {
            text-decoration: line-through;
        }

        .bg-red-500 {
            background-color: #ef4444;
        }

        .bg-green-500 {
            background-color: #10b981;
        }

        .bg-gray-200 {
            background-color: #e5e7eb;
        }

        .rounded-full {
            border-radius: 9999px;
        }

        .items-center {
            align-items: center;
        }

        .justify-between {
            justify-content: space-between;
        }

        .ml-2 {
            margin-left: 0.5rem;
        }

        .mr-2 {
            margin-right: 0.5rem;
        }

        .mr-4 {
            margin-right: 1rem;
        }

        .mt-4 {
            margin-top: 1rem;
        }

        .w-full {
            width: 100%;
        }

        .w-20 {
            width: 5rem;
        }

        .h-20 {
            height: 5rem;
        }

        .flex-col {
            flex-direction: column;
        }

        .flex-row {
            flex-direction: row;
        }

        .text-right {
            text-align: right;
        }

        .text-center {
            text-align: center;
        }

        .p-2 {
            padding: 0.5rem;
        }

        .px-2 {
            padding-left: 0.5rem;
            padding-right: 0.5rem;
        }

        .px-4 {
            padding-left: 1rem;
            padding-right: 1rem;
        }

        .py-1 {
            padding-top: 0.25rem;
            padding-bottom: 0.25rem;
        }

        .py-2 {
            padding-top: 0.5rem;
            padding-bottom: 0.5rem;
        }

        .mb-2 {
            margin-bottom: 10px;
        }

        .sidebar {
        width: 20%;
        background-color: #2D2824;
        color: #FFFFFF;
        padding: 1rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        }

        .sidebar img {
        border-radius: 50%;
        width: 100px;
        height: 100px;
        margin-bottom: 1rem;
        }

        .menu-items {
        list-style: none;
        padding: 0;
        width: 100%;
        margin-top: 1rem;
        }

        .menu-items li {
        margin-bottom: 1rem;
        width: 100%;
        }

        .menu-items a {
        color: #FFFFFF;
        text-decoration: none;
        font-weight: bold;
        display: flex;
        align-items: center;
        padding: 0.5rem;
        transition: color 0.3s;
        }

        .menu-items a:hover {
        color: #9A7E6F;
        }

        .menu-items a.text-orange-500 {
        color: #9A7E6F;
        }

        .logout-button {
        margin-top: auto;
        background: none;
        border: none;
        color: #FFFFFF;
        font-weight: bold;
        cursor: pointer;
        padding: 0.5rem;
        display: flex;
        align-items: center;
        }

        .content {
        width: 80%;
        background-color: #E4E6D9;
        padding: 2rem;
        overflow-y: auto;
        }

        .slider {
        position: relative;
        max-width: 100%;
        margin: auto;
        }

        .slides img {
        width: 100%;
        height: 300px;
        object-fit: cover;
        border-radius: 0.5rem;
        }

        .prev, .next {
        cursor: pointer;
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        color: white;
        font-size: 1.5rem;
        padding: 0.5rem;
        background: rgba(0, 0, 0, 0.5);
        border-radius: 50%;
        }

        .prev {
        left: 10px;
        }

        .next {
        right: 10px;
        }

        .dots {
        text-align: center;
        margin-top: 0.5rem;
        }

        .dot {
        height: 15px;
        width: 15px;
        margin: 0 2px;
        background-color: #bbb;
        border-radius: 50%;
        display: inline-block;
        cursor: pointer;
        transition: background-color 0.3s;
        }

        .dot.active {
        background-color: #717171;
        }

        .font-roboto {
        font-family: 'Roboto', sans-serif;
        }
    </style>
</head>
<body>
    <div class="flex">
        <!-- Sidebar -->
        <div class="w-1-5 p-4" style="background-color: #2D2824; color: #FFFFFF;">
            <!-- Set background and text color here -->
            <div class="flex items-center mb-4">
                <div style="width: 100px; height: 100px; margin: auto; border-radius: 50%; overflow: hidden;">
                    <img src="https://w0.peakpx.com/wallpaper/577/451/HD-wallpaper-bae-suzy-suzy-women-with-glasses-asian-face-glasses.jpg" alt="User profile picture" width="100" height="100" style="display: block; margin: auto; width: 100%; height: auto;">
                </div>
            </div>
            <ul class="menu-items">
                <li class="mb-2">
                    <a href="@Url.Action("TrangCaNhan", "TrangCaNhan")" class="flex items-center text-orange-500" style="color: #FFFFFF;">
                        <i class="fas fa-user mr-2"></i> Tài Khoản Của Tôi
                    </a>
                </li>
                <li class="mb-2">
                    <a href="@Url.Action("Donhang", "TrangCaNhan")" class="flex items-center" style="color: #FFFFFF;">
                        <i class="fas fa-shopping-cart mr-2"></i> Đơn hàng
                    </a>
                </li>
                <li class="mb-2">
                    <a href="@Url.Action("Lichsudonhhang", "TrangCaNhan")" class="flex items-center" style="color: #9A7E6F;">
                        <i class="fas fa-bell mr-2"></i> Thông Báo
                    </a>
                </li>
                <li class="mb-2">
                    <a href="@Url.Action("Voucher", "TrangCaNhan")" class="flex items-center" style="color: #FFFFFF;">
                        <i class="fas fa-ticket-alt mr-2"></i> Ví Voucher
                    </a>
                </li>
                <li class="mb-2">
                    <a href="@Url.Action("Diemtichluy", "TrangCaNhan")" class="flex items-center" style="color: #FFFFFF;">
                        <i class="fas fa-coins mr-2"></i> Điểm tích luỹ
                    </a>
                </li>
                <li class="mb-2 mt-auto">
                    <button class="flex items-center" style="background-color: #E4003A; border: none; color: #FFFFFF; cursor: pointer; padding: 0.5rem 1rem;"
                            onmouseover="this.style.backgroundColor='#B8002E'"
                            onmouseout="this.style.backgroundColor='#E4003A'"
                            onclick="confirmLogout()">
                        <i class="fas fa-sign-out-alt mr-2"></i> Thoát
                    </button>
                </li>
            </ul>
        </div>
        <div class="content">
            <!-- Slider Section -->
            <div class="slider">
                <div class="slides">
                    <img src="~/Content/Picture/img1.jpg" alt="Image 1">
                    <img src="~/Content/Picture/img2.jpg" alt="Image 2">
                    <img src="~/Content/Picture/img3.jpg" alt="Image 3">
                </div>
                <!-- Left and Right controls -->
                <a class="prev" onclick="moveSlides(-1)">&#10094;</a>
                <a class="next" onclick="moveSlides(1)">&#10095;</a>
            </div>

            <!-- Dots for image navigation -->
            <div class="dots">
                <span class="dot" onclick="currentSlide(1)"></span>
                <span class="dot" onclick="currentSlide(2)"></span>
                <span class="dot" onclick="currentSlide(3)"></span>
            </div>

            <!-- News and Promotions Section -->
            <div class="text-center">
                <p class="text-sm text-yellow-600 font-roboto">Tin tức và Khuyến Mãi</p>
                <h1 class="text-2xl font-bold text-black font-roboto">KHÁM PHÁ LEAFTEA NHẬN NGAY KHUYẾN MÃI</h1>
            </div>

            <!-- Flex container for products -->
            <div class="flex justify-center mt-8">
                <!-- Product 1 -->
                <div class="text-center mr-12 w-80 h-80 ml-8 flex flex-col justify-between">
                    <img alt="message1" class="object-cover mb-4 w-48 h-48 mx-auto" src="https://stc.shopiness.vn/deal/2020/06/18/7/8/8/b/1592472085712_540.png" />
                    <h4 class="text-lg font-bold">
                        ✦ BUY 2 GET 1 ✦
                    </h4>
                    <div class="flex justify-center items-center h-12">
                        <button class="bg-red-600 text-white w-24 h-8 flex items-center justify-center">
                            ĐỌC THÊM
                        </button>
                    </div>
                </div>
                <!-- Product 2 -->
                <div class="text-center mr-10 w-80 h-80 ml-4 flex flex-col justify-between">
                    <img alt="message2" class="object-cover mb-4 w-48 h-48 mx-auto" src="https://www.cukcuk.vn/wp-content/uploads/2023/03/332618114_1201158050520381_257784335595023631_n.jpeg" />
                    <h4 class="text-lg font-bold">
                        ✦ Phô mai Jerry ✦
                    </h4>
                    <div class="flex justify-center items-center h-12">
                        <button class="bg-red-600 text-white w-24 h-8 flex items-center justify-center">
                            ĐỌC THÊM
                        </button>
                    </div>
                </div>
                <!-- Product 3 -->
                <div class="text-center mr-12 w-96 h-80 ml-8 flex flex-col justify-between">
                    <img alt="message3" class="object-cover mb-4 w-48 h-48 mx-auto" src="https://katinat.vn/wp-content/uploads/2024/10/451584901_473177175411148_2112742851141756862_n.jpg" />
                    <h4 class="text-lg font-bold">
                        ✦ TRÀ SỮA CHÔM CHÔM ✦
                    </h4>
                    <div class="flex justify-center items-center h-12">
                        <button class="bg-red-600 text-white w-24 h-8 flex items-center justify-center">
                            ĐỌC THÊM
                        </button>
                    </div>
                </div>
                <!-- Product 4 -->
                <div class="text-center mr-12 w-80 h-80 ml-8 flex flex-col justify-between">
                    <img alt="message4" class="object-cover mb-4 w-48 h-48 mx-auto" src="https://cherryngoc.vn/wp-content/uploads/2023/06/50782989_2191594460920177_5216544403002228736_n.jpg" />
                    <h4 class="text-lg font-bold">
                        ✦ FREE UPSIZE ✦
                    </h4>
                    <div class="flex justify-center items-center h-12">
                        <button class="bg-red-600 text-white w-24 h-8 flex items-center justify-center">
                            ĐỌC THÊM
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        let slideIndex = 1;
        showSlides(slideIndex);

        function moveSlides(n) {
            showSlides(slideIndex += n);
        }

        function currentSlide(n) {
            showSlides(slideIndex = n);
        }

        function showSlides(n) {
            let slides = document.querySelectorAll(".slides img");
            let dots = document.querySelectorAll(".dot");
            if (n > slides.length) { slideIndex = 1 }
            if (n < 1) { slideIndex = slides.length }
            slides.forEach((slide, index) => {
                slide.style.display = index === slideIndex - 1 ? "block" : "none";
            });
            dots.forEach((dot, index) => {
                dot.className = dot.className.replace(" active", "");
                if (index === slideIndex - 1) dot.className += " active";
            });
        }

        // Sự kiện thoát trang cá nhân
        function confirmLogout() {
            const userConfirmed = confirm("Bạn có chắc chắn muốn đăng xuất?");
            if (userConfirmed) {
                window.location.href = '@Url.Action("Index", "Home")';
            }
        }
    </script>
</body>
</html>

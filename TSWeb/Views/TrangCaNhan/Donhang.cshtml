@{
    ViewBag.Title = "Trang Cá Nhân";
    Layout = "~/Views/Shared/_TrangCaNhanLayout.cshtml";
    <link href="~/Content/Css/DonHangStyleSheet.css" rel="stylesheet" />
}

<div class="content">
    <!-- Tabs -->
    <div class="tabs">
        <button class="tab active">Tất cả</button>
        <button class="tab">Chờ xác nhận</button>
        <button class="tab">Đã xác nhận</button>
        <button class="tab">Đang giao</button>
        <button class="tab">Đã giao</button>
        <button class="tab">Đã hủy</button>
    </div>

    <!-- Search Bar -->
    <div class="search-bar">
        <input type="text" placeholder="Tìm kiếm theo Tên Sản phẩm" />
    </div>

    <!-- Orders List -->
    <div class="orders">
        @if (ViewBag.list != null && ViewBag.list.Count > 0)
        {
            foreach (var dh in ViewBag.list)
            {
                <div class="order">
                    <!-- Product Image -->
                    <img src="https://via.placeholder.com/60" alt="Product" class="product-img" />

                    <!-- Order Details -->
                    <div class="order-details">
                        <h4>@dh[0]</h4>
                        @*<p>Đơn: @dh[2]</p>*@
                        <p>Ngày đặt: @dh[1]</p>
                        <p>Hình thức thanh toán: @dh[6]</p>
                        <p class="status " style="color:red;">@dh[2]</p>
                        <p>Tổng số tiền: <span class="price">@dh[3] VND</span></p>
                    </div>

                    <!-- Order Actions -->
                    <div class="order-actions">
                        <button class="btn repeat">Mua Lần Nữa</button>
                        <button class="btn details">Xem Chi Tiết Đơn Hàng</button>
                        <button class="btn review">Xem Đánh Giá</button>
                    </div>
                </div>
            }
        }
        else
        {
            <p>Không có đơn hàng nào để hiển thị.</p>
        }
    </div>
</div>

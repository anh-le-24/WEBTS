@{
    ViewBag.Title = "Trang Cá Nhân";
    Layout = "~/Views/Shared/_TrangCaNhanLayout.cshtml";
    <link href="~/Content/Css/DonHangStyleSheet.css" rel="stylesheet" />
}
<style>
    a
    {
        text-decoration:none;
    }
</style>

<div class="content">
    <!-- Tabs -->
    <div class="tabs">
        <a href="@Url.Action("DonHang", "TrangCaNhan")" class="tab active">Tất cả</a>
        <a href="@Url.Action("ChoXacNhan", "TrangCaNhan")" class="tab">Chờ xác nhận</a>
        <a href="@Url.Action("DaXacNhan", "TrangCaNhan")" class="tab">Đã xác nhận</a>
        <a href="@Url.Action("DangGiao", "TrangCaNhan")" class="tab">Đang giao</a>
        <a href="@Url.Action("DaGiao", "TrangCaNhan")" class="tab">Đã giao</a>
        <a href="@Url.Action("DaHuy", "TrangCaNhan")" class="tab">Đã hủy</a>
    </div>

    <!-- Search Bar -->
    <div class="search-bar">
        <input type="text" placeholder="Tìm kiếm theo Tên Sản phẩm" />
    </div>

    <!-- Orders List -->
    <div class="orders">
        @if (ViewBag.list != null && ViewBag.list.Count > 0)
        {
            foreach (var dh in ViewBag.list)
            {
                <div class="order">
                    <!-- Product Image -->
                  

                    <!-- Order Details -->
                    <div class="order-details">

                        <p>Đơn: @dh[0]</p>
                        <p>Ngày đặt: @dh[1]</p>
                        <p>Hình thức thanh toán: @dh[6]</p>
                        <p class="status " style="color:red;">@dh[2]</p>
                        <p>Tổng số tiền: <span class="price">@dh[3] VND</span></p>
                    </div>

                    <!-- Order Actions -->
                    <div class="order-actions">
                        <button class="btn repeat">Mua Lần Nữa</button>
                        <button class="btn details">Xem Chi Tiết Đơn Hàng</button>
                        <button class="btn review">Xem Đánh Giá</button>
                    </div>
                </div>
            }
        }
        else
        {
            <p>Không có đơn hàng nào để hiển thị.</p>
        }
    </div>
</div>

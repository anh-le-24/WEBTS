
@{
    ViewBag.Title = "TrangCaNhan";
    Layout = "~/Views/Shared/nav.cshtml";

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Don hang</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f3f4f6;
            font-family: Arial, sans-serif;
        }

        .flex {
            display: flex;
        }

        .w-1-5 {
            width: 20%;
            background-color: #2D2824;
        }

        .w-4-5 {
            width: 90%;
            background-color: #E4E6D9;
        }

        .bg-white {
            background-color: #ffffff;
        }

        .p-4 {
            padding: 1rem;
        }

        .mb-4 {
            margin-bottom: 1rem;
        }

        .border-b {
            border-bottom: 1px solid #e5e7eb;
        }

        .border-r {
            border-right: 1px solid #e5e7eb;
        }

        .rounded {
            border-radius: 0.25rem;
        }

        .text-gray-800 {
            color: #1f2937;
        }

        .text-gray-600 {
            color: #4b5563;
        }

        .text-red-500 {
            color: #ef4444;
        }

        .text-orange-500 {
            color: #f97316;
        }

        .text-white {
            color: #ffffff;
        }

        .text-xs {
            font-size: 0.75rem;
        }

        .font-semibold {
            font-weight: 600;
        }

        .line-through {
            text-decoration: line-through;
        }

        .bg-red-500 {
            background-color: #ef4444;
        }

        .bg-green-500 {
            background-color: #10b981;
        }

        .bg-gray-200 {
            background-color: #e5e7eb;
        }

        .rounded-full {
            border-radius: 9999px;
        }

        .items-center {
            align-items: center;
        }

        .justify-between {
            justify-content: space-between;
        }

        .ml-2 {
            margin-left: 0.5rem;
        }

        .mr-2 {
            margin-right: 0.5rem;
        }

        .mr-4 {
            margin-right: 1rem;
        }

        .mt-4 {
            margin-top: 1rem;
        }

        .w-full {
            width: 100%;
        }

        .w-20 {
            width: 5rem;
        }

        .h-20 {
            height: 5rem;
        }

        .flex-col {
            flex-direction: column;
        }

        .flex-row {
            flex-direction: row;
        }

        .text-right {
            text-align: right;
        }

        .text-center {
            text-align: center;
        }

        .p-2 {
            padding: 0.5rem;
        }

        .px-2 {
            padding-left: 0.5rem;
            padding-right: 0.5rem;
        }

        .px-4 {
            padding-left: 1rem;
            padding-right: 1rem;
        }

        .py-1 {
            padding-top: 0.25rem;
            padding-bottom: 0.25rem;
        }

        .py-2 {
            padding-top: 0.5rem;
            padding-bottom: 0.5rem;
        }

        .mb-2 {
            margin-bottom: 10px;
        }
    </style>
</head>
<body class="bg-gray-100 font-sans">
    <div class="flex">
        <!-- Sidebar -->
        <div class="w-1-5 p-4" style="background-color: #2D2824; color: #FFFFFF;">
            <!-- Set background and text color here -->
            <div class="flex items-center mb-4">
                <div style="width: 100px; height: 100px; margin: auto; border-radius: 50%; overflow: hidden;">
                    <img src="https://w0.peakpx.com/wallpaper/577/451/HD-wallpaper-bae-suzy-suzy-women-with-glasses-asian-face-glasses.jpg" alt="User profile picture" width="100" height="100" style="display: block; margin: auto; width: 100%; height: auto;">
                </div>
            </div>
            <ul class="menu-items">
                <li class="mb-2">
                    <a href="@Url.Action("TrangCaNhan", "TrangCaNhan")" class="flex items-center text-orange-500" style="color: #FFFFFF;">
                        <i class="fas fa-user mr-2"></i> Tài Khoản Của Tôi
                    </a>
                </li>
                <li class="mb-2">
                    <a href="@Url.Action("Donhang", "TrangCaNhan")" class="flex items-center" style="color: #9A7E6F;">
                        <i class="fas fa-shopping-cart mr-2"></i> Đơn hàng
                    </a>
                </li>
                <li class="mb-2">
                    <a href="@Url.Action("Lichsudonhhang", "TrangCaNhan")" class="flex items-center" style="color: #FFFFFF;">
                        <i class="fas fa-bell mr-2"></i> Thông Báo
                    </a>
                </li>
                <li class="mb-2">
                    <a href="@Url.Action("Voucher", "TrangCaNhan")" class="flex items-center" style="color: #FFFFFF;">
                        <i class="fas fa-ticket-alt mr-2"></i> Ví Voucher
                    </a>
                </li>
                <li class="mb-2">
                    <a href="@Url.Action("Diemtichluy", "TrangCaNhan")" class="flex items-center" style="color: #FFFFFF;">
                        <i class="fas fa-coins mr-2"></i> Điểm tích luỹ
                    </a>
                </li>
                <li class="mb-2 mt-auto">
                    <button class="flex items-center" style="background-color: #E4003A; border: none; color: #FFFFFF; cursor: pointer; padding: 0.5rem 1rem;"
                            onmouseover="this.style.backgroundColor='#B8002E'"
                            onmouseout="this.style.backgroundColor='#E4003A'"
                            onclick="confirmLogout()">
                        <i class="fas fa-sign-out-alt mr-2"></i> Thoát
                    </button>
                </li>
            </ul>
        </div>
        <!-- Main Content -->
        <div class="w-4/5 p-4">
            <!-- Tabs -->
            <div class="flex border-b mb-4">
                <a class="px-4 py-2 border-red-500 border-b-2 text-red-500" href="#">Tất cả</a>
                <a class="px-4 py-2 text-gray-600" href="#">Chờ xác nhận</a>
                <a class="px-4 py-2 text-gray-600" href="#">Đang giao</a>
                <a class="px-4 py-2 text-gray-600" href="#">Đã giao</a>
                <a class="px-4 py-2 text-gray-600" href="#">Đã Hủy</a>
            </div>
            <!-- Search Bar -->
            <div class="mb-4">
                <input class="w-full p-2 border rounded" placeholder="Tìm kiếm theo Tên Sản phẩm" type="text" />
            </div>
            <!-- Order List -->
            @foreach (var dh in ViewBag.list)
            {
                <div class="bg-white p-4 mb-4 rounded shadow">

                    <div class="flex items-center mb-2">
                        <img alt="Store logo" class="mr-2" height="20" src="https://www.shutterstock.com/image-vector/bubble-milk-tea-boba-vector-600nw-2299991473.jpg" width="20" />
                        <span class="text-gray-800 font-semibold">LEAF TEA</span>
                        <button class="ml-2 px-2 py-1 text-xs text-white bg-red-500 rounded">Call</button>
                        <button class="ml-2 px-2 py-1 text-xs text-white bg-gray-500 rounded">Order</button>
                    </div>
                    <div class="flex mb-2">
                        <img alt="Product image" class="mr-4" height="80" src="https://maycha.com.vn/wp-content/uploads/2023/10/ts-matcha-kem-trung-khe.png" width="80" />
                        <div>
                            <div class="text-gray-800">Đơn: @dh[0]</div>
                            <div class="text-gray-600 text-sm">Ngày đặt: @dh[1]</div>
                            <div class="text-gray-600 text-sm">Hình thức thanh toán: @dh[6]</div>
                        </div>
                    </div>
                    <div class="flex justify-between items-center">
                        <div class="text-gray-600 text-sm">@dh[2]</div>
                        <div class="text-red-500 text-sm">ĐẪ ĐÁNH GIÁ</div>
                    </div>
                    <div class="flex justify-between items-center mt-2">
                        <div class="text-gray-600 text-sm">
                            Tổng số tiền: <span class="text-red-500 text-lg">@dh[3] </span>
                        </div>
                        <div>
                            <button class="px-4 py-2 bg-red-500 text-white rounded">Mua Lần Nữa</button>
                            <button class="px-4 py-2 bg-gray-200 text-gray-800 rounded">Xem Chi Tiết Đơn Hàng</button>
                            <button class="px-4 py-2 bg-gray-200 text-gray-800 rounded">Xem Đánh Giá</button>
                        </div>
                    </div>
                   
                </div>
            }

            </div>
    </div>
    <script>
        // Sự kiện thoát trang cá nhân
        function confirmLogout() {
            const userConfirmed = confirm("Bạn có chắc chắn muốn đăng xuất?");
            if (userConfirmed) {
                window.location.href = '@Url.Action("Index", "Home")';
            }
        }
    </script>
</body>
</html>

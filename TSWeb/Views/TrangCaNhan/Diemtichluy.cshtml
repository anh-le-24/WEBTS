﻿
@{
    ViewBag.Title = "Diemtichluy";
    Layout = "~/Views/Shared/_TrangCaNhanLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Diem tich luy</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f3f4f6;
            font-family: Arial, sans-serif;
        }
    </style>
</head>
<body>
    <div class="flex min-h-screen">
        <!-- Sidebar -->
        <div class="w-64 p-4 bg-gray-800 text-white flex flex-col items-center" style="background-color: #2D2824; color: #FFFFFF;">
            <!-- Set background and text color here -->
            <div class="flex items-center mb-4">
                <div style="width: 100px; height: 100px; margin: auto; border-radius: 50%; overflow: hidden;">
                    <img src="https://w0.peakpx.com/wallpaper/577/451/HD-wallpaper-bae-suzy-suzy-women-with-glasses-asian-face-glasses.jpg" alt="User profile picture" width="100" height="100" style="display: block; margin: auto; width: 100%; height: auto;">
                </div>
            </div>
            <ul class="menu-items">
                <li class="mb-2">
                    <a href="@Url.Action("TrangCaNhan", "TrangCaNhan")" class="flex items-center text-orange-500" style="color: #FFFFFF;">
                        <i class="fas fa-user mr-2"></i> Tài Khoản Của Tôi
                    </a>
                </li>
                <li class="mb-2">
                    <a href="@Url.Action("Donhang", "TrangCaNhan")" class="flex items-center" style="color: #FFFFFF;">
                        <i class="fas fa-shopping-cart mr-2"></i> Đơn hàng
                    </a>
                </li>
                <li class="mb-2">
                    <a href="@Url.Action("Lichsudonhhang", "TrangCaNhan")" class="flex items-center" style="color: #FFFFFF;">
                        <i class="fas fa-bell mr-2"></i> Thông Báo
                    </a>
                </li>
                <li class="mb-2">
                    <a href="@Url.Action("Voucher", "TrangCaNhan")" class="flex items-center" style="color: #FFFFFF;">
                        <i class="fas fa-ticket-alt mr-2"></i> Ví Voucher
                    </a>
                </li>
                <li class="mb-2">
                    <a href="@Url.Action("Diemtichluy", "TrangCaNhan")" class="flex items-center" style="color: #9A7E6F;">
                        <i class="fas fa-coins mr-2"></i> Điểm tích luỹ
                    </a>
                </li>
                <li class="mb-2 mt-auto">
                    <button class="flex items-center" style="background-color: #E4003A; border: none; color: #FFFFFF; cursor: pointer; padding: 0.5rem 1rem;"
                            onmouseover="this.style.backgroundColor='#B8002E'"
                            onmouseout="this.style.backgroundColor='#E4003A'"
                            onclick="confirmLogout()">
                        <i class="fas fa-sign-out-alt mr-2"></i> Thoát
                    </button>
                </li>
            </ul>
        </div>

        <div class="bg-gray-100 font-sans  flex-1">
            <!-- Header Main Content -->
            <div class="p-4">
                <div class="bg-[#3B332E] text-white p-4 rounded-lg shadow-lg">
                    <div class="flex items-center justify-between">
                        <h1 class="text-xl font-bold">LEAF TEA</h1>
                        <p>Xin chào</p>
                    </div>
                    <div class="flex justify-between mt-2">
                        <button class="bg-red-700 py-1 px-3 rounded">Chi tiết điểm thưởng</button>
                        <div class="flex items-center space-x-2">
                            <div class="relative w-32 h-6 bg-gray-300 rounded-full">
                                <div class="absolute top-0 left-0 h-full bg-yellow-400 rounded-full" style="width: 57%;"></div> <!-- 850/1500 = 57% -->
                            </div>
                            <p>850 / 1500</p>
                            <span class="text-yellow-400">★</span>
                        </div>
                        <button class="bg-red-700 py-1 px-3 rounded" onclick="toggleMemberPolicy()">Chính sách thành viên</button>
                    </div>
                </div>
            </div>

            <!-- Main Content -->
            <div class="p-4">
                <!-- Featured Drinks -->
                <div class="bg-white p-4 rounded-lg shadow-md mb-4">
                    <h2 class="text-lg font-bold mb-2">Sản phẩm nổi bật</h2>
                    <div class="flex overflow-x-auto">
                        <!-- Product 1 -->
                        <div class="min-w-[100px] flex flex-col items-center" style="margin-right: 50px; gap: 20px;">
                            <img src="https://gongcha.com.vn/wp-content/uploads/2019/06/Tra-Xanh-Long-Nhan.png" alt="Product 1" class="rounded-lg mb-2" style="height: 80px; width: 80px; object-fit: cover;">
                            <p class="text-center font-semibold">Trà Xanh Long Nhãn Táo Đỏ</p>
                        </div>

                        <!-- Product 2 -->
                        <div class="min-w-[100px] flex flex-col items-center" style="margin-right: 50px; gap: 20px;">
                            <img src="https://gongcha.com.vn/wp-content/uploads/2019/06/Sua-Tuoi-Long-Nhan.png" alt="Product 2" class="rounded-lg mb-2" style="height: 80px; width: 80px; object-fit: cover;">
                            <p class="text-center font-semibold">Sữa Tươi Long Nhãn Táo Đỏ</p>
                        </div>

                        <!-- Product 3 -->
                        <div class="min-w-[100px] flex flex-col items-center" style="margin-right: 50px; gap: 20px;">
                            <img src="https://gongcha.com.vn/wp-content/uploads/2019/03/Matcha-Tea-Latte-with-Matcha-Jelly.png" alt="Product 3" class="rounded-lg mb-2" style="height: 80px; width: 80px; object-fit: cover;">
                            <p class="text-center font-semibold">Matcha Latte</p>
                        </div>

                        <!-- Product 4 -->
                        <div class="min-w-[100px] flex flex-col items-center" style="margin-right: 50px; gap: 20px;">
                            <img src="https://gongcha.com.vn/wp-content/uploads/2018/01/Tr%C3%A0-s%E1%BB%AFa-Khoai-m%C3%B4n-2.png" alt="Product 4" class="rounded-lg mb-2" style="height: 80px; width: 80px; object-fit: cover;">
                            <p class="text-center font-semibold">Trà sữa khoai môn</p>
                        </div>

                        <!-- Product 5 -->
                        <div class="min-w-[100px] flex flex-col items-center" style="margin-right: 50px; gap: 20px;">
                            <img src="https://gongcha.com.vn/wp-content/uploads/2018/02/Tr%C3%A0-%C4%90en-Milkfoam-2.png" alt="Product 5" class="rounded-lg mb-2" style="height: 80px; width: 80px; object-fit: cover;">
                            <p class="text-center font-semibold">Trà đen</p>
                        </div>

                        <!-- Product 6 -->
                        <div class="min-w-[100px] flex flex-col items-center" style="margin-right: 50px; gap: 20px;">
                            <img src="https://gongcha.com.vn/wp-content/uploads/2023/08/tra-xanh-kem-sua-Milo-1.png" alt="Product 6" class="rounded-lg mb-2" style="height: 80px; width: 80px; object-fit: cover;">
                            <p class="text-center font-semibold">Trà xanh kem sữa Milo</p>
                        </div>
                    </div>
                </div>


                <!-- Promotions -->
                <div class="bg-white p-4 rounded-lg shadow-md mb-4">
                    <h2 class="text-lg font-bold mb-2">Chương trình ưu đãi</h2>
                    <div class="grid grid-cols-2 gap-4">
                        <!-- Promotion 1 -->
                        <div class="bg-gray-100 p-2 rounded-lg text-center">
                            <img src="https://www.vuakhuyenmai.vn/wp-content/uploads/gongcha-free-upsize-16-3-22.jpg" alt="Promotion 1" class="w-full h-70 object-cover rounded-lg mb-2">
                            <p>Up size nhen</p>
                        </div>
                        <!-- Promotion 2 -->
                        <div class="bg-gray-100 p-2 rounded-lg text-center">
                            <img src="https://stc.shopiness.vn/deal/2020/04/28/c/3/a/f/1588056501316_540.png" alt="Promotion 2" class="w-full h-70 object-cover rounded-lg mb-2">
                            <p>Khuyến mãi đặc biệt</p>
                        </div>
                    </div>
                </div>

                <!-- News Section -->
                <div class="bg-white p-4 rounded-lg shadow-md">
                    <h2 class="text-lg font-bold mb-2">Tin tức</h2>
                    <div class="flex space-x-4 overflow-x-auto">
                        <!-- News 1 -->
                        <div class="min-w-[150px]">
                            <img src="https://example.com/news1.jpg" alt="News 1" class="w-full rounded-lg mb-2">
                            <p class="text-center">Cập nhật mới nhất</p>
                        </div>
                        <!-- News 2 -->
                        <div class="min-w-[150px]">
                            <img src="https://example.com/news2.jpg" alt="News 2" class="w-full rounded-lg mb-2">
                            <p class="text-center">Sự kiện đặc biệt</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Right Sidebar -->
        <div id="memberPolicy" class="flex-1 bg-white text-gray-900 p-8" style="display: none;">
            <div class="text-center mb-8">
                <h1 class="text-3xl font-bold mb-3">LEAF TEA VN E-Members</h1>
                <img alt="Gong Cha logo" class="mx-auto " src="~/Content/Picture/banner_dtl_2.png" width="900" height="800" />
            </div>
            <div class="text-center mb-2">
                <img alt="Gong Cha logo" class="mx-auto mb-4" src="~/Content/Picture/banner_dtl_1.png" width="900" height="800" />
                <a href="https://example.com/link-to-gongcha-app" target="_blank" class="bg-red-500 text-white px-4 py-2 rounded mt-4 inline-block">
                    Mobile App
                </a>
            </div>

            <!-- Content Section -->
            <div class="text-center mb-8">
                <p class="text-lg">100+ screens more</p>
            </div>

            <div class="flex justify-center mb-8">
                <img alt="Mobile app screenshot" class="w-1/2" height="500" src="https://storage.googleapis.com/a1aa/image/NybfzlOc6tQBTyoRsDCXPtfjBWX2IGEvjcAqzEqYhruh3TtTA.jpg" width="300" />
            </div>

            <div class="text-center mb-8">
                <div class="bg-gray-100 p-4 rounded-lg inline-block">
                    <img alt="Gift icon" class="mx-auto mb-4" height="50" src="https://storage.googleapis.com/a1aa/image/gHu5plqb8VJRLR78nFoHhaCtEi5BfDNPOoUvp0XQ8Ct07p2JA.jpg" width="50" />
                    <h2 class="text-xl font-bold">ƯU ĐÃI LEAF TEA</h2>
                    <p class="text-lg">Tích điểm - Đổi thưởng</p>
                </div>
            </div>

            <div class="text-center mb-8">
                <p class="text-lg">Download on Store</p>
                <div class="flex justify-center mt-4">
                    <a href="#">
                        <img alt="Google Play Store" class="mr-4" height="50" src="https://storage.googleapis.com/a1aa/image/lkTCuvTW6Vq1FlvUPhwtOAE2GdYFQBShToUOlwx34hc59U7E.jpg" width="150" />
                    </a>
                    <a href="#">
                        <img alt="Apple App Store" height="50" src="https://storage.googleapis.com/a1aa/image/glEc3GveRASLLCx7395yGCfBnlALVJRVHZVPykfZ3EiXvnanA.jpg" width="150" />
                    </a>
                </div>
            </div>

            <div class="bg-red-500 text-white text-center py-4">
                <p class="text-lg">Thanks for watching</p>
            </div>
        </div>
    </div>
    <script>
        function toggleMemberPolicy() {
            var memberPolicyDiv = document.getElementById("memberPolicy");
            if (memberPolicyDiv.style.display === "none" || memberPolicyDiv.style.display === "") {
                memberPolicyDiv.style.display = "block";
            } else {
                memberPolicyDiv.style.display = "none";
            }
        }

        // Sự kiện thoát trang cá nhân
        function confirmLogout() {
            const userConfirmed = confirm("Bạn có chắc chắn muốn đăng xuất?");
            if (userConfirmed) {
                window.location.href = '@Url.Action("Index", "Home")';
            }
        }

    </script>
</body>
</html>
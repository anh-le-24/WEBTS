
@{
    ViewBag.Title = "TrangCaNhan";
    Layout = null;
}

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Trang Ca Nhan</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f3f4f6;
            font-family: Arial, sans-serif;
        }

        .flex {
            display: flex;
        }

        .w-1-5 {
            width: 20%;
            background-color: #2D2824;
        }

        .w-4-5 {
            width: 80%;
            background-color: #FEF9F2;
        }

        .bg-white {
            background-color: #ffffff;
        }

        .p-4 {
            padding: 1rem;
        }

        .mb-4 {
            margin-bottom: 1rem;
        }

        .border-b {
            border-bottom: 1px solid #e5e7eb;
        }

        .border-r {
            border-right: 1px solid #e5e7eb;
        }

        .rounded {
            border-radius: 0.25rem;
        }

        .text-gray-800 {
            color: #1f2937;
        }

        .text-gray-600 {
            color: #4b5563;
        }

        .text-red-500 {
            color: #ef4444;
        }

        .text-orange-500 {
            color: #f97316;
        }

        .text-white {
            color: #ffffff;
        }

        .text-xs {
            font-size: 0.75rem;
        }

        .font-semibold {
            font-weight: 600;
        }

        .line-through {
            text-decoration: line-through;
        }

        .bg-red-500 {
            background-color: #ef4444;
        }

        .bg-green-500 {
            background-color: #10b981;
        }

        .bg-gray-200 {
            background-color: #e5e7eb;
        }

        .rounded-full {
            border-radius: 9999px;
        }

        .items-center {
            align-items: center;
        }

        .justify-between {
            justify-content: space-between;
        }

        .ml-2 {
            margin-left: 0.5rem;
        }

        .mr-2 {
            margin-right: 0.5rem;
        }

        .mr-4 {
            margin-right: 1rem;
        }

        .mt-4 {
            margin-top: 1rem;
        }

        .w-full {
            width: 100%;
        }

        .w-20 {
            width: 5rem;
        }

        .h-20 {
            height: 5rem;
        }

        .flex-col {
            flex-direction: column;
        }

        .flex-row {
            flex-direction: row;
        }

        .text-right {
            text-align: right;
        }

        .text-center {
            text-align: center;
        }

        .p-2 {
            padding: 0.5rem;
        }

        .px-2 {
            padding-left: 0.5rem;
            padding-right: 0.5rem;
        }

        .px-4 {
            padding-left: 1rem;
            padding-right: 1rem;
        }

        .py-1 {
            padding-top: 0.25rem;
            padding-bottom: 0.25rem;
        }

        .py-2 {
            padding-top: 0.5rem;
            padding-bottom: 0.5rem;
        }

        .mb-2 {
            margin-bottom: 10px;
        }
    </style>
</head>
<body class="bg-gray-100 font-sans">
    <div class="flex justify-center">
        <!-- Sidebar -->
        <div class="w-1-5 p-4" style="background-color: #2D2824; color: #FFFFFF;">
            <!-- Set background and text color here -->
            <div class="flex items-center mb-4">
                <div style="width: 100px; height: 100px; margin: auto; border-radius: 50%; overflow: hidden;">
                    <img src="https://w0.peakpx.com/wallpaper/577/451/HD-wallpaper-bae-suzy-suzy-women-with-glasses-asian-face-glasses.jpg" alt="User profile picture" width="100" height="100" style="display: block; margin: auto; width: 100%; height: auto;">
                </div>
            </div>
            <ul class="menu-items">
                <li class="mb-2">
                    <a href="@Url.Action("Index","TrangCaNhan",new { idnd = Session["taikhoan"] })" class="flex items-center text-orange-500" style="color: #9A7E6F;">
                        <i class="fas fa-user mr-2"></i> Tài Khoản Của Tôi
                    </a>
                </li>
                <li class="mb-2">
                    <a href="@Url.Action("DoiMatKhau", "TrangCaNhan")" class="flex items-center" style="color: #FFFFFF;">
                        <i class="fas fa-shopping-cart mr-2"></i> Đổi mật khẩu
                    </a>
                </li>
                <li class="mb-2">
                    <a href="@Url.Action("Donhang", "TrangCaNhan",new { id = Session["taikhoan"] })" class="flex items-center" style="color: #FFFFFF;">
                        <i class="fas fa-shopping-cart mr-2"></i> Đơn hàng
                    </a>
                </li>
                <li class="mb-2">
                    <a href="@Url.Action("Lichsudonhhang", "TrangCaNhan")" class="flex items-center" style="color: #FFFFFF;">
                        <i class="fas fa-bell mr-2"></i> Thông Báo
                    </a>
                </li>
                <li class="mb-2">
                    <a href="@Url.Action("Voucher", "TrangCaNhan")" class="flex items-center" style="color: #FFFFFF;">
                        <i class="fas fa-ticket-alt mr-2"></i> Ví Voucher
                    </a>
                </li>
                <li class="mb-2">
                    <a href="@Url.Action("Diemtichluy", "TrangCaNhan")" class="flex items-center" style="color: #FFFFFF;">
                        <i class="fas fa-coins mr-2"></i> Điểm tích luỹ
                    </a>
                </li>
                <li class="mb-2 mt-auto">
                    <button class="flex items-center" style="background-color: #E4003A; border: 4px; color: #FFFFFF; cursor: pointer; padding: 0.5rem 1rem;"
                            onmouseover="this.style.backgroundColor='#B8002E'"
                            onmouseout="this.style.backgroundColor='#E4003A'"
                            onclick="confirmLogout()">
                        <i class="fas fa-sign-out-alt mr-2"></i> Thoát
                    </button>
                </li>
            </ul>
        </div>
        <!-- Main Content -->
        <div class="w-4-5 p-8" style="background-image: url('https://storage.googleapis.com/public-tripi/food/img/454616FvpEmu/8.jpg'); background-size: cover; background-position: center;">
            <h1 class="text-2xl font-bold mb-6" style="text-align: center; color: #FBFFDC; ">
                Thông Tin Tài Khoản
            </h1>
            <form class="bg-white bg-opacity-70 p-6 rounded-lg shadow-md border border-blue-500" style="backdrop-filter: blur(5px);">
                <div class="mb-4">
                    <label class="block text-gray-700">
                        Tên:
                    </label>
                    <input class="w-full p-2 border border-gray-300 rounded" type="text" value="@ViewBag.list[0][1]" required />
                </div>
                <div class="mb-4">
                    <label class="block text-gray-700">
                        Số điện thoại:
                    </label>
                    <input class="w-full p-2 border border-gray-300 rounded" type="text" value="@ViewBag.list[0][4]" />
                </div>
                <div class="mb-4">
                    <label class="block text-gray-700">
                        Email:
                    </label>
                    <input class="w-full p-2 border border-gray-300 rounded" type="email" value="@ViewBag.list[0][2]" readonly />
                </div>
                <div class="mb-4">
                    <label class="block text-gray-700">
                        Địa chỉ:
                    </label>
                    <input class="w-full p-2 border border-gray-300 rounded" type="text" value="@ViewBag.list[0][5]" />
                </div>
                <div class="mb-4">
                    <label class="block text-gray-700">
                        Điểm tích lũy:
                    </label>
                    <input class="w-full p-2 border border-gray-300 rounded" type="text" value="@ViewBag.list[0][9]" readonly style="cursor:not-allowed;"
/>
                </div>
                <div class="mb-4">
                    <label class="block text-gray-700">
                        Đăng ký nhận thông báo:
                    </label>
                    <div class="flex items-center">
                        <input class="mr-2" name="notification" type="radio" />
                        Nhận thông báo
                    </div>
                    <div class="flex items-center">
                        <input class="mr-2" name="notification" type="radio" />
                        Không nhận thông báo
                    </div>
                </div>
                <div class="flex justify-center mt-4">
                    <button class="bg-red-500 text-white px-4 py-2 rounded mr-2" type="submit" style="background-color: #FBD288; ">
                        Cập nhật
                    </button>
                    <a href="@Url.Action("DangNhap","DangNhapDK")" class="bg-red-500 text-white px-4 py-2 rounded" type="button" onclick="confirmLogout()">
                        Đăng xuất
                    </a>
                </div>
            </form>
        </div>


        <script>
            // Sự kiện đăng xuất
            function confirmLogout() {
                const userConfirmed = confirm("Bạn có chắc chắn muốn đăng xuất?");
                if (userConfirmed) {
                    window.location.href = '/logout';
                }
            }

            // Sự kiện thoát trang cá nhân
            function confirmLogout() {
                const userConfirmed = confirm("Bạn có chắc chắn muốn đăng xuất?");
                if (userConfirmed) {
                    window.location.href = '@Url.Action("Index", "Home")';
                }
            }
        </script>
</div>
</body>
</html>

@{
    ViewData["Title"] = "Thông Tin Tài Khoản";
    Layout = "~/Views/Shared/_TrangCaNhanLayout.cshtml";
}

<div class="card">
    <div class="card-header bg-light">
        <h3>Thông Tin Tài Khoản</h3>
    </div>
    <div class="card-body">
        <form>
            <div class="mb-3">
                <label for="name" class="form-label">Tên:</label>
                <input type="text" class="form-control" id="name" value="Nguyễn Huỳnh Phú Quý">
            </div>
            <div class="mb-3">
                <label for="phone" class="form-label">Số điện thoại:</label>
                <input type="text" class="form-control" id="phone" value="869100723">
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email:</label>
                <input type="email" class="form-control" id="email" value="nguyenphuquytv2012@gmail.com">
            </div>
            <div class="mb-3">
                <label for="address" class="form-label">Địa chỉ:</label>
                <input type="text" class="form-control" id="address" value="Trà Vinh">
            </div>
            <div class="mb-3">
                <label for="points" class="form-label">Điểm tích lũy:</label>
                <input type="number" class="form-control" id="points" value="0" readonly>
            </div>
            <div class="mb-3">
                <label class="form-label">Đăng ký nhận thông báo:</label>
                <div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="notification" id="notifyYes" value="yes" checked>
                        <label class="form-check-label" for="notifyYes">Nhận thông báo</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="notification" id="notifyNo" value="no">
                        <label class="form-check-label" for="notifyNo">Không nhận thông báo</label>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-end">
                <button type="button" class="btn btn-warning me-2">Cập nhật</button>
                <button type="button" class="btn btn-danger">Đăng xuất</button>
            </div>
        </form>
    </div>
</div>
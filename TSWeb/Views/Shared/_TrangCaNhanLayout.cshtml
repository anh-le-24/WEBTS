<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Trang Cá Nhân</title>
    <link rel="stylesheet" href="~/Content/Css/TrangCaNhan.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3">
                <div class="sidebar bg-dark text-white p-3">
                    <div class="text-center mb-4">
                        <img src="~/Content/Picture/avatar.jpg" alt="Avatar" class="rounded-circle" width="80">
                    </div>
                    <ul class="nav flex-column">
                        <li class="nav-item mb-3">
                            <a href="@Url.Action("Index","TrangCaNhan")" class="nav-link text-white"><i class="fas fa-user"></i> Tài Khoản Của Tôi</a>
                        </li>
                        <li class="nav-item mb-3">
                            <a href="@Url.Action("DoiMatKhau","TrangCaNhan")" class="nav-link text-white"><i class="fas fa-key"></i> Đổi Mật Khẩu</a>
                        </li>
                        <li class="nav-item mb-3">
                            <a href="@Url.Action("DonHang","TrangCaNhan")" class="nav-link text-white"><i class="fas fa-shopping-bag"></i> Đơn Hàng</a>
                        </li>
                        <li class="nav-item mb-3">
                            <a href="@Url.Action("Index","Home")" class="nav-link text-white"><i class="fas fa-bell"></i> Thông Báo</a>
                        </li>
                        <li class="nav-item mb-3">
                            <a href="@Url.Action("Index","Home")" class="nav-link text-white"><i class="fas fa-wallet"></i> Ví Voucher</a>
                        </li>
                        <li class="nav-item mb-3">
                            <a href="@Url.Action("Index","Home")" class="nav-link text-white"><i class="fas fa-coins"></i> Điểm Tích Lũy</a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index","Home")" class="nav-link text-danger"><i class="fas fa-sign-out-alt"></i> Thoát</a>
                        </li>
                    </ul>
                </div>
            </div>
            <!-- Content -->
            <div class="col-md-9">
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>
﻿
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <!-- Header -->
    <header>
        <div class="logo">
            <img src="~/Content/Picture/logo.jpg" alt="TSWeb">
            <span>QUẢN LÝ NHÂN VIÊN</span>
        </div>
        <div class="user-info">
            <span>@DateTime.Now.ToString("HH:mm:ss | dddd, 'ngày' dd 'tháng' MM 'năm' yyyy")</span>
            <img src="~/Content/Picture/profile.jpg" alt="Avatar" />
        </div>
    </header>

    <!-- Sidebar -->
    <aside class="sidebar">
        <ul>
            <li>@Html.ActionLink("VỀ TRANG CHỦ", "Index", "Home")</li>
            <li>@Html.ActionLink("ĐƠN HÀNG", "HomeNV", "NhanVien")</li>
            <li>@Html.ActionLink("CA LÀM", "LichHen", "BenhNhan")</li>
            <li>@Html.ActionLink("HÓA ĐƠN", "DanhMuc", "BenhNhan")</li>
        </ul>
    </aside>
    <main>
        @RenderBody()
    </main>
    

</body>
</html>
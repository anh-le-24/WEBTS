﻿
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <link href="~/Content/Css/HomeStyleSheet.css" rel="stylesheet">

    @{
        // Lấy danh sách từ Session["taikhoan"]
        System.Collections.ArrayList a = (System.Collections.ArrayList)Session["taikhoan"];
        var userId = a != null && a.Count > 0 ? a[0].ToString() : null; // Đây là ID người dùng (IDND)
    }

</head>
<body>
    <header>
        <div class="nav">
            <div class="down">
                <span id="word">LANGUAGES</span>
                <img src="~/Content/Picture/down.png" alt="Doswn">
            </div>
            <div class="cart">
                @if (Session["taikhoan"] != null)
                {
                    <a href='@Url.Action("Cart", "Home", new { id = userId })'>
                        <img src="~/Content/Picture/cart.png" alt="Cart" />
                    </a>
                }
                else
                {
                    <a href='@Url.Action("Cart", "Home")'>
                        <img src="~/Content/Picture/cart.png" alt="Cart" />
                    </a>
                }
            </div>

            <img src="~/Content/Picture/logo.jpg" alt="Green Tea" id="logo">
            <div class="side-bar">
                <img src="~/Content/Picture/menu1.png" alt="Menu" id="menu1">
                @if (Session["taikhoan"] != null && userId != null)
                {
                    <h3>@userId</h3>
                }
                else
                {
                    <a href="@Url.Action("DangNhap", "DangNhapDK")">Đăng nhập</a>
                }
                <ul class="menu-items">
                    <li><a href="@Url.Action("ListSanPham","Home")">Menu</a></li>
                    <li><a href="#">Về chúng tôi</a></li>
                    <li><a href="#">Ưu đãi</a></li>
                    <li><a href="#">Thông tin cá nhân</a></li>
                    <li><a href="@Url.Action("DangNhap", "DangNhapDK")">Tài khoản</a></li>
                </ul>
            </div>
            <div class="overlay-sidebar">
            </div>
            <img src="~/Content/Picture/menu1.png" alt="Menu" id="menu">
        </div>
    </header>
    <main class="container">
        @RenderBody()
    </main>

    <footer class="bottom">
        <div class="footer-left">
            <div class="footer-content" style="max-width: 1200px; margin: 0 auto; display: flex; justify-content: space-between; align-items: center;">
                <!-- Logo hoặc tên thương hiệu -->
                <div class="brand" style="flex: 1;">
                    <h2 style="margin: 0; font-size: 24px;">LEAF TEA</h2>
                    <p>VỀ CHÚNG TÔI</p>
                    <p>Một thương hiệu mới với những trãi nghiệm mới giúp cho những hương vị cuộc sống được bùng nổ hơn.</p>
                </div>

            </div>
            <div class="footer-bottom" style="margin-top: 20px;">
                <p>&copy; 2024 LEAF TEA - All rights reserved.</p>
            </div>

        </div>
        <div class="footer-mid">
            <!-- Thông tin liên hệ -->
            <div class="contact-info" style="flex: 1;">
                <p style="margin: 0;">Email: leaftea@gmail.com</p>
                <p style="margin: 0;">Hotline: 0123 456 789</p>
            </div>
        </div>
        <div class="footer-right">
            <!-- Liên kết mạng xã hội -->
            <div class="social-icons" style="flex: 1; display: flex; justify-content: center;">
                <a href="https://www.instagram.com" target="_blank" style="margin-right: 15px;">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/a/a5/Instagram_icon.png" alt="Instagram" style="width: 32px;">
                </a>
                <a href="https://www.facebook.com" target="_blank" style="margin-right: 15px;">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/5/51/Facebook_f_logo_%282019%29.svg" alt="Facebook" style="width: 32px;">
                </a>

            </div>
        </div>
    </footer>
    <script src="~/Scripts/HomeJavaScript.js"></script>

</body>
</html>